<%- include('partials/header') %> <!-- Include header partial -->

<div class="container mt-5"> <!-- Main content container with top margin -->
  <h1>Register</h1> <!-- Registration heading -->

  <div class="row"> <!-- Row for form and social block -->
    <div class="col-sm-8"> <!-- Column for registration form -->
      <div class="card"> <!-- Card for styling -->
        <div class="card-body"> <!-- Card body -->

          <!-- Registration form -->
          <form action="/register" method="POST"> <!-- Form submission to /register route -->
            <div class="form-group"> <!-- Form group for email -->
              <label for="email">Email</label> <!-- Email label -->
              <input type="email" class="form-control" name="username"> <!-- Email input field -->
            </div>
            <div class="form-group"> <!-- Form group for password -->
              <label for="password">Password</label> <!-- Password label -->
              <input type="password" class="form-control" name="password"> <!-- Password input field -->
            </div>
            <button type="submit" class="btn btn-dark">Register</button> <!-- Submit button -->
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4"> <!-- Column for social block -->
      <div class="card social-block"> <!-- Card for social block -->
        <div class="card-body"> <!-- Card body -->

          <!-- Google Sign Up button -->
          <a class="btn btn-block" href="/auth/google" role="button"> <!-- Link to Google authentication -->
            <i class="fab fa-google"></i> <!-- Google icon -->
            Sign Up with Google <!-- Button text -->
          </a>

        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/header') %> <!-- Include header partial again -->

